<Page x:Class="Junisha_CSharp_Zero_App0.PageFolder.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Junisha_CSharp_Zero_App0.PageFolder"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*" MinHeight="220" MaxHeight="400"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.6*" MinWidth="200" MaxWidth="350"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Junisha" Foreground="#76ABAE" Grid.ColumnSpan="3" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontSize="100" Name="LogoText"/>

        <Border Margin="10" Padding="0" CornerRadius="10" Grid.Row="1" Grid.Column="1"
                Background="#31363F"  BorderBrush="#76ABAE" BorderThickness="5">

            <Viewbox Grid.Row="1"  Stretch="Uniform" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" SharedSizeGroup="col"/>
                    </Grid.RowDefinitions>

                        <StackPanel Margin="10 0">
                            <Button x:Name="Btn_Start" Margin="20 5" Content="Начать" Click="Btn_Start_Click">
                                <Button.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Padding" Value="3"/>
                                        <Setter Property="Background" Value="#0076ABAE"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="#76ABAE"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Btn_Chapter" Margin="20 5" Content="Выбрать урок" Click="Btn_Chapter_Click">
                                <Button.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Padding" Value="3"/>
                                        <Setter Property="Background" Value="#0076ABAE"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="#76ABAE"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Btn_About" Margin="20 5" Content="Подробнее" Click="Btn_About_Click">
                                <Button.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Padding" Value="3"/>
                                        <Setter Property="Background" Value="#0076ABAE"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="#76ABAE"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                            <Button x:Name="Btn_Exit" Margin="20 5" Content="Выйти" Click="Btn_Exit_Click">
                                <Button.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                        <Setter Property="Padding" Value="3"/>
                                        <Setter Property="Background" Value="#0076ABAE"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Foreground" Value="#76ABAE"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </StackPanel>
                </Grid>
            </Viewbox>

        </Border>
        
        
    </Grid>
</Page>
